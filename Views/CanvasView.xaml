<UserControl x:Class="Views.CanvasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Views"
             mc:Ignorable="d" 
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image 
        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" 
        Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType={x:Type Grid}, Mode=FindAncestor}}" 
        Source="{Binding WorkingArea.ImageSource, Mode=OneWay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Name="Area"
        MouseDown="Area_OnMouseDown"
        MouseMove="Area_OnMouseMove"
        MouseUp="Area_OnMouseUp"
        Stretch="UniformToFill"
        Loaded="Area_OnLoaded"
        >
        
        </Image>
    </Grid>
</UserControl>
